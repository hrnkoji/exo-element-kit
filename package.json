{
  "name": "exo-element-kit",
  "version": "1.0.0",
  "description": "",
  "main": "",
  "scripts": {
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:update": "jest -u",
    "build": "npm run test && webpack --config webpack.config.js --mode production",
    "start": "webpack-dev-server --content-base build --hot --inline --mode development --open",
    "format": "prettier --single-quote --print-width 120 --trailing-comma es5 --write 'src/**/*.{ts,tsx}'",
    "lint-staged": "lint-staged",
    "lint-pass": "echo '\\033[4;32m♡' Awesome! You are ready to commit ♡' \\033[0m'"
  },
  "author": "alexander.king, luke.helg",
  "license": "MIT",
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "@types/node": "^8.0.53",
    "@types/react-test-renderer": "^16.0.1",
    "awesome-typescript-loader": "^5.0.0",
    "html-webpack-plugin": "^3.2.0",
    "jest": "^22.4.4",
    "lint-staged": "^7.0.4",
    "pre-commit": "^1.2.2",
    "prettier": "1.10.2",
    "react-test-renderer": "^16.3.2",
    "source-map-loader": "^0.2.3",
    "ts-jest": "^22.4.6",
    "typescript": "^2.6.1",
    "webpack-cli": "^2.0.14",
    "webpack-dev-server": "^3.1.3"
  },
  "dependencies": {
    "@material-ui/core": "^1.0.0",
    "@material-ui/icons": "^1.0.0",
    "empty": "^0.10.1",
    "js-atom": "^0.4.0",
    "js-logger": "^1.3.0",
    "lodash": "^4.17.10",
    "react": "^16.0.0",
    "react-dom": "^16.0.0",
    "styled-components": "^3.2.6",
    "webpack": "^4.5.0"
  },
  "lint-staged": {
    "{src/**/*.{ts,tsx}": [
      "prettier --single-quote --print-width 120 --trailing-comma es5 --write",
      "git add"
    ]
  },
  "pre-commit": [
    "lint-staged",
    "lint-pass",
    "test"
  ],
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "moduleNameMapper": {
      "^components(.*)$": "<rootDir>/src/components/$1",
      "domain(.*)$": "<rootDir>/src/domain/$1"
    }
  }
}
